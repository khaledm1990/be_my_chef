
<div class="container">
<div>
   <%= image_tag current_user.image_url(:thumb).to_s if current_user.image %>
</div>
<table class="table table-striped">
    <tr>
      <td>Email</td>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <td>First_name</td>
      <td><%= @user.first_name %></td>
    </tr>

    <tr>
      <td>last_name</td>
      <td><%= @user.last_name %></td>
    </tr>

    <tr>
      <td>phone_number</td>
      <td><%= @user.phone_number %></td>
    </tr>

    <tr>
      <td>Nationality</td>
      <td><%= @user.nationality %></td>
    </tr>

    <% if @user.chef_status == true  %>
    <tr>
      <td>About_chef</td>
      <td><%= @user.about_chef %></td>
    </tr>

    <tr>
      <td>My_IC</td>
      <td><%= @user.chef_ic %></td>
    </tr>

      <tr>
      <td>chef_speciality</td>
      <td><%= @user.speciality %></td>
    </tr>
    <% end %>

  </table>
</div>
