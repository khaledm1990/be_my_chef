<%= form_for(current_user.active_votes.build) do |f| %>
  <div><%= hidden_field_tag :voted_id, @user.id %></div>
  <%= f.radio_button(:cast, "1") %>
  <%= f.label(:cast, "up") %>
  <%= f.radio_button(:cast, "-1") %>
  <%= f.label(:cast, "down") %>
  <%= f.submit "Vote", class: "btn btn-primary" %>
<% end %>