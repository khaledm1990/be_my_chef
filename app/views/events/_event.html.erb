<div class="white" >
	<h1>Event Details</h1>
	<div class="container-fluid">
	<table class="table table-hover">
	<!-- <tr>
		<th></th>
		<th></th>
	</tr> -->
		<tbody>
			<tr>
				<td>Date</td>
				<td><%= @event.date %></td>
			</tr>
			<tr>
				<td>Starting Time</td>
				<td><%= @event.start_time %></td>
			</tr>
			<tr>
				<td>Ending Time</td>
				<td><%= @event.end_time %></td>
			</tr>
			<tr>
				<td>Estimated Pax</td>
				<td><%= @event.pax %></td>
			</tr>
			<tr>
				<td>Location</td>
				<td>
					<ul>
						<li><% if !@event.location.block.blank? %>
									<%= @event.location.block.to_s + ", " %>
								<% end %>
								<% if !@event.location.street.blank? %>
									<%= @event.location.street.to_s + ", " %>
								<% end %>
						</li>
						<li><% if !@event.location.city.blank? %>
									<%= @event.location.city.to_s + ", " %>
								<% end %>
								<% if !@event.location.state.blank? %>
									<%= @event.location.state.to_s + ", " %>
								<% end %>
								<% if !@event.location.postal_code.blank? %>
									<%= @event.location.postal_code.to_s %>
								<% end %>
						</li>
					</ul>
				</td>
				<tr>
					<td>Cuisine Type</td>
					<td><%= @event.variety %></td>
				</tr>
				<tr>
					<td>Menu Description</td>
					<td><%= @event.description %></td>
				</tr>
			</tr>
		</tbody>
	</table>
	</div>
</div>