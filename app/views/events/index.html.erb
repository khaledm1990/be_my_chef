<p id="notice"><%= notice %></p>
<div class="container">
<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <%= form_for(:user, url: edit_user_registration_path, method: :get) do |f| %>
    <%= f.hidden_field :become_a_chef, value: true %>
    <%= f.submit 'Become a chef' %>
  <% end %>

  <!-- <button id="show_chef_form" type="button">Become a Chef</button> -->

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
</div>
