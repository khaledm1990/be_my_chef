

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
<div class="container">
    <h1>Edit Profile</h1>
    <hr>
  <div class="row">
      <!-- left column -->
      <div class="col-md-3">
        <div class="text-center">
        <%= image_tag current_user.image_url(:small_thumb).to_s, class: "avatar img-circle", alt:"avatar" if current_user.image %>
          <h6>Upload a different photo...</h6>
          <%= f.file_field :image %>
<!--           <input type="file" class="form-control"> -->
          <p>
          <label>
            <%= f.check_box :remove_image %>
            Remove Profile Image
          </label>
        </p>
        </div>
      </div>

      <!-- edit form column -->
      <div class="col-md-9 personal-info">
        <div class="alert alert-info alert-dismissable">
          <a class="panel-close close" data-dismiss="alert">Ã—</a>
          <i class="fa fa-coffee"></i>
          This is an <strong>.alert</strong>. Use this to show important messages to the user.
        </div>
        <h3>Personal info</h3>

        <form class="form-horizontal" role="form">
          <div class="form-group">
            <%= f.label :first_name, class: "col-lg-3 control-label" %>
            <div class="col-lg-8">
              <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :last_name, class: "col-lg-3 control-label" %>
            <div class="col-lg-8">
              <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :phone_number, class: "col-lg-3 control-label" %>
            <div class="col-lg-8">
              <%= f.text_field :phone_number, autofocus: true, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :Nationality, class: "col-lg-3 control-label" %>
            <div class="col-lg-8">
              <%= f.text_field :nationality, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password, class: "col-lg-3 control-label" %>
            <div class="col-lg-8">
              <%= f.password_field :password, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, class: "col-lg-3 control-label" %>
            <div class="col-lg-8">
              <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>
          </div>


          <div class="form-group">
            <%= f.label :current_password, class: "col-lg-3 control-label" %>
            <div class="col-lg-8">
              <%= f.password_field :current_password, class: "form-control" %>
            </div>
          </div>

        <%if current_user.chef_status == true || @become_a_chef %>
          <div class="form-group">
            <%= f.label :about_your_self, class: "col-lg-3 control-label" %>
            <div class="col-lg-8">
              <%= f.text_area :about_chef, autofocus: true, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :chef_speciality, class: "col-lg-3 control-label" %>
            <div class="col-lg-8">
              <%= f.text_field :speciality, autofocus: true, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :User_IC, class: "col-lg-3 control-label" %>
            <div class="col-lg-8">
              <%= f.text_field :chef_ic, autofocus: true, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :Experience, class: "col-lg-3 control-label" %>
            <div class="col-lg-8">
              <%= f.text_field :chef_experience, autofocus: true, class: "form-control" %>
            </div>
          </div>

          <%= f.hidden_field :chef_status, :value => true %>
        <% end%>

          <div  class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8">
              <input type="submit" class="btn btn-primary" value="Save Changes">
              <span></span>
              <%= link_to t(".cancel"), user_path(current_user.id), class: "btn btn-default" %>
            </div>
          </div>
        </form>
      </div>
  </div>
</div>
<hr>

<%  end%>
